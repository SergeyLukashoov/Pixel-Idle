org, repo = (ENV["GITHUB_REPOSITORY"] || "").split("/")

def normalize_repo_slug(value)
  return "" if value.to_s.strip.empty?

  slug = value.strip
  slug = slug.sub(%r{\Agit@github\.com:}, "")
  slug = slug.sub(%r{\Ahttps?://github\.com/}, "")
  slug = slug.sub(%r{\.git\z}, "")
  slug
end

def github_https_repo_url(value, fallback_org = nil, fallback_repo = nil)
  slug = normalize_repo_slug(value)
  if slug.empty? && !fallback_org.to_s.strip.empty? && !fallback_repo.to_s.strip.empty?
    slug = "#{fallback_org}/#{fallback_repo}"
  end
  return "" if slug.empty?

  "https://github.com/#{slug}.git"
end

match_repo_source = ENV["MATCH_REPOSITORY"] || ENV["MATCH_GIT_URL"]
match_org, match_repo = normalize_repo_slug(match_repo_source).split("/")

#before_all do
#  xcversion(version: "14.2.0")
#end

platform :ios do
  lane :init_ci do
    github_action(
      api_token: ENV["GH_PAT"],
      org: org,
      repo: repo,
      match_org: match_org,
      match_repo: match_repo,
      writable_deploy_key: true
    )
  end

  desc "Sync codesigning certificates"
  lane :sync_certificates do
    key_id = ENV["APPSTORE_KEY_ID"] || ENV["ASC_KEY_ID"]
    issuer_id = ENV["APPSTORE_ISSUER_ID"] || ENV["ASC_ISSUER_ID"]
    key_content = ENV["APPSTORE_P8"] || ENV["ASC_KEY"]

    app_store_connect_api_key(
      key_id: key_id,
      issuer_id: issuer_id,
      key_content: key_content
    )

    main_app_bundle_id = ENV["IOS_BUNDLE_ID"] || ENV["BUNDLE_IDENTIFIER"]
    extension_bundle_id = "#{main_app_bundle_id}.notifications"
    is_short_build = ENV["BUILD_TYPE"].to_s.strip == "short"

    resolved_match_git_url = github_https_repo_url(
      ENV["MATCH_GIT_URL"] || ENV["MATCH_REPOSITORY"],
      match_org,
      match_repo
    )
    UI.user_error!("MATCH_GIT_URL or MATCH_REPOSITORY must point to a GitHub repo") if resolved_match_git_url.empty?

    match(
      type: "appstore",
      storage_mode: "git",
      git_url: resolved_match_git_url,
      app_identifier: is_short_build ? [main_app_bundle_id] : [main_app_bundle_id, extension_bundle_id],
      readonly: false
    )
  end

  desc "Deliver a new Release build to the App Store"
  lane :release do
    build
    deliver
    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false,
      force: true,
      skip_screenshots: true,
      run_precheck_before_submit: false
    )
  end

  desc "Deliver a new Beta build to Apple TestFlight"
  lane :beta do
    # Missing Export Compliance can also be set through Deliverfile
    update_info_plist(
      xcodeproj: "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj",
      plist_path: 'Info.plist',
      block: proc do |plist|
        plist['ITSAppUsesNonExemptEncryption'] = false
      end
    )

    # Update iOS Deployment Target
    update_info_plist(
      xcodeproj: "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj",
      plist_path: 'Info.plist',
      block: proc do |plist|
        plist['MinimumOSVersion'] = '11.0'
        plist['NSLocationWhenInUseUsageDescription'] = 'Allow access to location for app usage' 
      end
    )

    build
    upload_to_testflight(skip_waiting_for_build_processing: true)
  end

  desc "Compatibility alias for short CI lane"
  lane :short_build_upload_testflight do
    ENV["BUILD_TYPE"] = "short" if ENV["BUILD_TYPE"].to_s.strip.empty?
    beta
  end

  desc "Compatibility alias for full CI lane"
  lane :full_build_upload_testflight do
    ENV["BUILD_TYPE"] = "full" if ENV["BUILD_TYPE"].to_s.strip.empty?
    beta
  end

  desc "List Provisioning Profiles"
  lane :list_profiles do
    sh "security find-identity -v -p codesigning"
  end

  desc "Install cocoapods"
    lane :install_pods do
      cocoapods(
          clean: true,
          use_bundle_exec: false,
          repo_update: true,
          podfile: "#{ENV['IOS_BUILD_PATH']}/iOS/Podfile"
    )
  end

  desc "Create .ipa"
  lane :build do
    ios_bundle_id = ENV["IOS_BUNDLE_ID"] || ENV["BUNDLE_IDENTIFIER"]
    notifications_bundle_id = "#{ios_bundle_id}.notifications"
    is_short_build = ENV["BUILD_TYPE"].to_s.strip == "short"
    xcode_project_path = "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj"
    xcode_workspace_path = "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcworkspace"

    setup_ci
    sync_certificates
    list_profiles

    # Unity has specific requirements around codesigning that we have to handle
    # See https://github.com/fastlane/fastlane/discussions/17458 for context
   
    # Automatic Signing for Unity-iPhone Target
    update_code_signing_settings(
      use_automatic_signing: true,
      path: "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj"
    )

    # Manual Signing for OneSignalNotificationServiceExtension
    #update_code_signing_settings(
    #  use_automatic_signing: false,
    #  team_id: ENV["sigh_#{ENV['IOS_BUNDLE_ID']}_appstore_team-id"],
    #  code_sign_identity: "iPhone Distribution",
    #  targets: "OneSignalNotificationServiceExtension",
    #  path: "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj",
    #  profile_name: ENV["sigh_#{ENV['IOS_BUNDLE_ID']}.OneSignalNotificationServiceExtension_appstore_profile-name"],
    #  profile_uuid: ENV["sigh_#{ENV['IOS_BUNDLE_ID']}.OneSignalNotificationServiceExtension_appstore"]
    #)

    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: ENV["sigh_#{ios_bundle_id}_appstore_team-id"],
      code_sign_identity: 'iPhone Distribution',
      targets: 'Unity-iPhone',
      path: "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj",
      profile_name: ENV["sigh_#{ios_bundle_id}_appstore_profile-name"],
      profile_uuid: ENV["sigh_#{ios_bundle_id}_appstore"]
    )

    unless is_short_build
      update_code_signing_settings(
        use_automatic_signing: false,
        team_id: ENV["sigh_#{notifications_bundle_id}_appstore_team-id"] || ENV["sigh_#{ios_bundle_id}_appstore_team-id"],
        code_sign_identity: 'iPhone Distribution',
        targets: 'notifications',
        path: "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj",
        profile_name: ENV["sigh_#{notifications_bundle_id}_appstore_profile-name"],
        profile_uuid: ENV["sigh_#{notifications_bundle_id}_appstore"]
      )
    end

    # Update version & build number
     version_number = ENV['APP_VERSION'] || '1.0.0'
     increment_version_number(version_number: version_number, xcodeproj: "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj")
     increment_build_number({ build_number: latest_testflight_build_number(version: version_number, app_identifier: ios_bundle_id) + 1, xcodeproj: "#{ENV['IOS_BUILD_PATH']}/iOS/Unity-iPhone.xcodeproj"}) 
    
    # In full builds we compile the notifications extension, which depends on CocoaPods modules.
    install_pods unless is_short_build

    build_app_options = {
      scheme: 'Unity-iPhone',
      xcargs: '-allowProvisioningUpdates IPHONEOS_DEPLOYMENT_TARGET=16.0',
      #destination: 'generic/platform=iOS' # Виправити формат
      #destination: "platform=iOS Simulator, id=0FA23C4A-0E4A-4F03-9F6C-32122603E2DA, OS=16.2, name=iPhone 14"
      export_options: {
        method: 'app-store',
        uploadBitcode: false, # Вимкнути біткод
        compileBitcode: false, # Вимкнути компіляцію біткоду
        #uploadSymbols: true,
        #provisioningProfiles: {
        #  'com.TestCI.TestCI': 'Match AppStore com.TestCI.TestCI'
        #}
      }
    }
    if is_short_build
      build_app_options[:project] = xcode_project_path
    else
      build_app_options[:workspace] = xcode_workspace_path
    end
    build_app(build_app_options)
  end

end
